<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- Header Section -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryContainer"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimaryContainer"
                app:layout_collapseMode="pin">

                <!-- Top Bar with Back Button and Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:paddingBottom="5dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/tv_playlist_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Playlist"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <ImageButton
                        android:id="@+id/btn_playlist_options"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_options"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Options"
                        android:padding="12dp"
                        app:tint="?attr/colorOnPrimaryContainer"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>

                <!-- Playlist Info Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_playlist_art"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/default_album_art"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerRoundSmall" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_playlist_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Playlist Name"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/tv_song_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 songs"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_playlist_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 min"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:alpha="0.8"
                            android:layout_marginTop="2dp" />

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_play_playlist"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="PLAY"
                                android:layout_marginEnd="8dp"
                                android:textSize="12sp"
                                android:minWidth="80dp"
                                style="@style/Widget.Material3.Button"
                                app:icon="@drawable/ic_playn"
                                app:iconTint="?attr/colorOnPrimary"
                                app:backgroundTint="@color/white"
                                app:iconSize="16dp"
                                app:iconPadding="4dp"
                                app:iconGravity="textStart" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_shuffle_playlist"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="SHUFFLE"
                                android:layout_marginStart="8dp"
                                android:textSize="10sp"
                                android:minWidth="140dp"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                app:icon="@drawable/shuffle"
                                app:iconTint="@color/white"
                                app:strokeColor="@color/white"
                                android:textColor="@color/white"
                                app:iconSize="16dp"
                                app:iconPadding="4dp"
                                app:iconGravity="textStart" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area (Songs List) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Songs List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songs_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:background="@color/colorBackground" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/tv_empty_playlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No songs in this playlist"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp"
                android:background="@color/colorBackground" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>